<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pointofsale" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
  <!--      <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SingleLineText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/edit_field_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textCapSentences</item>
    </style>
    <style name="SingleLineNumberDecimal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/edit_field_margin</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="SingleLineNumber" parent="@style/SingleLineNumberDecimal">
        <item name="android:numeric">integer</item>
        <item name="android:digits">0123456789</item>
        <item name="android:inputType">number</item>
    </style>
</resources>